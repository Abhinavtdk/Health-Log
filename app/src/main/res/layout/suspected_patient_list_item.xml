<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/recycler_bg"
    android:layout_height="100dp">

    <LinearLayout
        android:id="@+id/suspect_list_item_nameStatusContainer_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/suspect_list_item_name_textView"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/suspect_list_item_reason_textView"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/suspect_list_item_mobile_textView"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-6dp"
        android:layout_toEndOf="@+id/suspect_list_item_nameStatusContainer_linearLayout"
        android:ellipsize="end"
        android:maxLines="3"
        android:minLines="3"
        android:text="Last log description,this is demo text displaying " />

    <TextView
        android:id="@+id/suspect_list_item_mobile_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="+91 9923496282"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/suspect_list_item_age_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/suspect_list_item_nameStatusContainer_linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="218dp"
        android:layout_marginBottom="6dp"
        android:layout_toStartOf="@+id/suspect_list_item_mobile_textView"
        android:text="35" />


</RelativeLayout>