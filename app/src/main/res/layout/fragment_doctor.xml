<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.doctor.DoctorFragment">

    <LinearLayout
        android:id="@+id/doctor_searchContainer_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <EditText
            android:id="@+id/doctor_searchBox_editText"
            android:layout_width="331dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/patient_id"
            android:inputType="textPersonName"
            android:backgroundTint="@color/colorPrimary"
            />

        <Button
            android:id="@+id/doctor_search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="@string/search"
            android:textSize="12sp"
            android:layout_toRightOf="@id/doctor_searchBox_editText"
            android:textColor="#fff" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/doctor_frameLayout"
        android:layout_width="407dp"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/doctor_searchContainer_linearLayout"
        android:background="@color/colorPrimary"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/dashboard_showList_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/doctor_frameLayout"
        tools:listitem="@layout/doctor_list_item"/>

</RelativeLayout>